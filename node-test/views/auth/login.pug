extends ../layouts/common

block content
    h1 Login
    if errors 
        each error in errors    
            .alert.alert-danger= error
            
    form( method="POST")
        .form-group
            lable(class="form-label", for="name") Email
            Input#name(type='text',name="email", class='form-control mt-2', value = values ? values.email : "")

        .form-group
            lable(class="form-label", for="phone") Password
            Input#phone(type='password',name="password", class='form-control mt-2', value = values ? values.password : "")

        button(class="btn btn-primary mt-2") Login
