extends ../layouts/common

block content
  h1
    span.me-3 User
    a.btn.btn-primary(href="/users/create",class="btn btn-primary") new
  .d-flex
    form.ms-auto.d-flex(action="/users/search", method="GET")
      input(type="text", name="q",class="form-control")
      button.btn.btn-primary.ms-2 Search
  table.table
    tr
      th Avatar
      th Name
      th Phone
      th Actions
    each user in users
      tr
        td
          img(src="data:image/" + user.avatar.contentType + ";base64," + user.avatar.data.toString('base64') )
        td= user.name
        td= user.phone
        td
          a.btn.btn-light(href="/users/" + user.id, class="btn btn-primary") View
